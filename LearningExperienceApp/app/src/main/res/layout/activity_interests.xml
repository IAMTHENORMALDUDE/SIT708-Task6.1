<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="16dp">

    <TextView
        android:id="@+id/interestsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Your\nInterests"
        android:textColor="@color/text_primary"
        android:textSize="32sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/interestsSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/interestsTitle"
        android:layout_marginTop="8dp"
        android:text="You may select up to 10 topics"
        android:textColor="@color/text_secondary"
        android:textSize="16sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/interestsSubtitle"
        android:layout_above="@+id/nextButton"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:id="@+id/interestsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Interest rows will be added dynamically -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <Button
                    android:id="@+id/interestAlgorithms"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/interest_button_unselected"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:padding="12dp"
                    android:elevation="4dp"
                    android:text="Algorithms" />

                <Button
                    android:id="@+id/interestDataStructures"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/interest_button_unselected"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:padding="12dp"
                    android:elevation="4dp"
                    android:text="Data Structures" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <Button
                    android:id="@+id/interestWebDevelopment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/interest_button_unselected"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:padding="12dp"
                    android:elevation="4dp"
                    android:text="Web Development" />

                <Button
                    android:id="@+id/interestTesting"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/interest_button_unselected"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:padding="12dp"
                    android:elevation="4dp"
                    android:text="Testing" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <Button
                    android:id="@+id/interestMobileDev"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/interest_button_unselected"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:padding="12dp"
                    android:elevation="4dp"
                    android:text="Mobile Development" />

                <Button
                    android:id="@+id/interestAI"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/interest_button_unselected"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:padding="12dp"
                    android:elevation="4dp"
                    android:text="Artificial Intelligence" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <Button
                    android:id="@+id/interestDatabases"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/interest_button_unselected"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:padding="12dp"
                    android:elevation="4dp"
                    android:text="Databases" />

                <Button
                    android:id="@+id/interestNetworking"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/interest_button_unselected"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:padding="12dp"
                    android:elevation="4dp"
                    android:text="Networking" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <Button
                    android:id="@+id/interestSecurity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/interest_button_unselected"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:padding="12dp"
                    android:elevation="4dp"
                    android:text="Security" />

                <Button
                    android:id="@+id/interestCloudComputing"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/interest_button_unselected"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:padding="12dp"
                    android:elevation="4dp"
                    android:text="Cloud Computing" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/nextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/next_button_background"
        android:text="Next"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        android:padding="16dp"
        android:elevation="8dp" />

</RelativeLayout>
